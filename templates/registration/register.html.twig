{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="max-w-md mx-auto mt-10">
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
				{{ flash_error }}
			</div>
		{% endfor %}

		<h1 class="text-xl font-semibold mb-6">Inscription</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
		<div>
			{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm '}}) }}
			{{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
		</div>

		<div>
			{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
			{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm '}}) }}
			{{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
		</div>

		<!-- Agree Terms section removed -->

		<button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
			S'inscrire
		</button>


		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
